@page
@model IndexModel
@{
    ViewData["Title"] = "Join Watch Party";
}

<div class="text-center">
    <h1 class="display-4">Join Watch Party</h1>

    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="alert alert-danger mt-3">
            @Model.Error
        </div>
    }

    <div class="row justify-content-center mt-5">
        <div class="col-md-5">
            <div class="card mb-4">
                <div class="card-header">Join or Create Room</div>
                <div class="card-body">
                    <form method="get" action="/Room">
                        <div class="mb-3 text-start">
                            <label for="userName" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="userName" name="userName" required>
                        </div>
                        <div class="mb-3 text-start">
                            <label for="roomId" class="form-label">Room ID</label>
                            <input type="text" class="form-control" id="roomId" name="roomId" required placeholder="e.g. movie-night">
                        </div>
                        <div class="mb-3 text-start">
                            <label for="password" class="form-label">Password (Optional)</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Leave empty for public room">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Go to Room</button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header">Active Rooms</div>
                <div class="list-group list-group-flush">
                    @if (!Model.Rooms.Any())
                    {
                        <div class="list-group-item text-muted">No active rooms found.</div>
                    }
                    @foreach (var room in Model.Rooms)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@room.Id</strong>
                                @if (!room.State.IsPublic)
                                {
                                    <span class="badge bg-secondary ms-2">Private</span>
                                }
                                else
                                {
                                    <span class="badge bg-success ms-2">Public</span>
                                }
                            </div>
                            <button class="btn btn-sm btn-outline-primary" onclick="joinExisting('@room.Id', @(room.State.IsPublic.ToString().ToLower()))">Join</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function joinExisting(id, isPublic) {
        document.getElementById('roomId').value = id;
        if (!isPublic) {
            document.getElementById('password').focus();
            alert("This room requires a password.");
        } else {
            document.getElementById('password').value = "";
        }
    }
</script>
